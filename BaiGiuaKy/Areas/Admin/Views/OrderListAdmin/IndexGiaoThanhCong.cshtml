@model X.PagedList.IPagedList<BaiGiuaKy.Models.Order>

@{
    ViewData["Title"] = "Index";
    //decimal total = 0;
    decimal total = Convert.ToDecimal(ViewData["Total"]);
}

<h1 class="text-center my-4">Đơn Hàng</h1>

@using (Html.BeginForm("Search", "OrderListAdmin", FormMethod.Get))
{
    <p>
        <div style="text-align: right;">
            Tìm kiếm: <input type="text" name="searchString" />
            <input type="hidden" name="viewName" value="IndexGiaoThanhCong" />
            <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
        </div>
    </p>
}

<form asp-action="ThongKe" method="get">
    <div class="form-group">
        <label for="startDate">Ngày bắt đầu:</label>
        <input type="date" id="startDate" name="startDate" class="form-control">
    </div>
    <div class="form-group">
        <label for="endDate">Ngày kết thúc:</label>
        <input type="date" id="endDate" name="endDate" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Thống kê</button>
</form>

<div class="card-header">
    <h3 class="card-title">Danh Sách Đã Giao Thành Công</h3>
</div>
<!-- /.card-header -->
<div class="card-body">
    <table class="table">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Thời gian</th>
                <th>Mã giảm giá</th>
                <th>Phần trăm giảm</th>
                <th>Tổng cộng</th>
                <th>Phương thức thanh toán</th>
                
                <th>Địa chỉ giao hàng</th>
                <th>Ghi chú</th>

                
                
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate</td>
                    <td>@order.DiscountCode</td>
                    <td>@order.DiscountPercentage</td>
                    <td>@order.TotalPrice</td>
                    
                    <td>@order.PaymentMethod</td>
                    <td>@order.ShippingAddress</td>
                    <td>@order.Notes</td>

                    
                    <td>
                        <!-- Link đến trang chi tiết đơn hàng -->
                        <a href="@Url.Action("OrderDetails", "OrderListAdmin", new { orderId = order.Id })">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="container">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=1">Đầu</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.PageNumber - 1)">Trước</a>
                </li>
            }
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.PageNumber + 1)">Tiếp</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="?page=@Model.PageCount">Cuối</a>
                </li>
            }
        </ul>
    </nav>
</div>



<div class="card-body">
    <h5 class="btn btn-block btn-lg" style="width: 100%; cursor: default; background-color: #ffc107;">
        Tổng tiền:
        <span style="font-weight: bold; color: #dc3545;">@total</span>
    </h5>
</div>
