@model BaiGiuaKy.Models.Category

<div class="container my-5">
    <div class="card border-0 shadow">
        <div class="card-body">
            <h2 class="card-title text-center text-primary">Mã loại: @Model.Id</h2>
            <div class="text-center mt-4">
                <h3 class="text-secondary">Tên Loại: @Model.Name</h3>
            </div>
        </div>
        <div class="card-footer text-muted text-center">
            <a asp-action="Index" class="btn btn-outline-primary">Quay lại danh sách</a>
        </div>
    </div>
</div>
