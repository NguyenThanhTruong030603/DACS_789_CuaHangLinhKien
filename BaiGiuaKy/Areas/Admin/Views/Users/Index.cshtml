@model List<ApplicationUser>



<div class="card-header">
    <h3 class="card-title">Danh Sách Tài Khoản</h3>
</div>
<!-- /.card-header -->
<div class="card-body">

    <table class="table">

        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>
                            <form asp-controller="Users" asp-action="ResetPassword" asp-route-userId="@user.Id" method="post">
                                <button type="submit">Reset Password</button>
                            </form>

                        </td>
                    </tr>
                } 
                
            </tbody>
</div>

