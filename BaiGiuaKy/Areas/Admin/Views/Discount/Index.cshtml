@model X.PagedList.IPagedList<BaiGiuaKy.Models.Discount>

@section Scripts
{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#autocomplete").autocomplete({
                source: '/Admin/Discount/AutocompleteSearch'
            });
        });
    </script>
}

<h1 class="text-center my-4 text-primary">
    <i class="fas fa-tag me-2"></i>Mã Giảm Giá
</h1>

@using (Html.BeginForm("Search", "Discount", FormMethod.Get))
{
    <div class="search-bar input-group mb-4">
        <input type="text" name="searchString" id="autocomplete" class="form-control" placeholder="Tìm kiếm mã giảm giá..." />
        <button class="btn btn-primary" type="submit">
            <i class="fas fa-search"></i> Tìm kiếm
        </button>
    </div>
}

<!-- Add Discount Button -->
<div class="mb-3 text-end">
    <a asp-action="Add" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Thêm Mã Giảm Giá
    </a>
</div>

<div class="card shadow-lg mb-5">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title mb-0">
            <i class="fas fa-list me-2"></i>Danh Sách Mã Giảm Giá
        </h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th><i class="fas fa-hashtag"></i> Mã giảm giá</th>
                    <th><i class="fas fa-percentage"></i> Phần trăm giảm</th>
                    <th><i class="fas fa-calendar-alt"></i> Ngày hết hạn</th>
                    <th><i class="fas fa-cogs"></i> Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var discount in Model)
                {
                    <tr>
                        <td>@discount.Code</td>
                        <td>@discount.Percentage %</td>
                        <td>@discount.ExpirationDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Update" asp-route-id="@discount.Id" class="btn btn-secondary">
                                <i class="fa fa-pencil"></i> Chỉnh sửa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="pagination-container text-center">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=1"><i class="fas fa-angle-double-left"></i> Đầu</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.PageNumber - 1)"><i class="fas fa-angle-left"></i> Trước</a>
                </li>
            }
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.PageNumber + 1)">Tiếp <i class="fas fa-angle-right"></i></a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="?page=@Model.PageCount">Cuối <i class="fas fa-angle-double-right"></i></a>
                </li>
            }
        </ul>
    </nav>
</div>

<style>
    h1 {
        font-size: 2.5rem;
        font-weight: bold;
    }

    .search-bar {
        max-width: 400px;
        margin: auto;
    }

    .card-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px;
    }

    .card-title {
        font-size: 1.5rem;
        display: flex;
        align-items: center;
    }

        .card-title i {
            font-size: 1.2rem;
        }

    .table {
        font-size: 0.95rem;
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

    .table-light {
        background-color: #f8f9fa;
    }

    .table-bordered {
        border: 1px solid #ddd;
    }

    .btn {
        border-radius: 5px;
    }

    .pagination .page-item .page-link {
        border-radius: 5px;
    }

    .pagination .active .page-link {
        background-color: #007bff;
        color: #fff;
        font-weight: bold;
    }

    .input-group .form-select {
        border-radius: 0.375rem;
    }

    .pagination-container {
        margin-top: 20px;
    }
</style>
