@model BaiGiuaKy.Models.Discount
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Add Category";
}

<h2>Thêm Mã Giảm Giá</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    
    <div class="form-group">
        <label asp-for="Code"></label>
        <textarea asp-for="Code" class="form-control"></textarea>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Percentage"></label>
        <input asp-for="Percentage" class="form-control" />
        <span asp-validation-for="Percentage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExpirationDate"></label>
        <input asp-for="ExpirationDate" class="form-control" type="date" />
        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
