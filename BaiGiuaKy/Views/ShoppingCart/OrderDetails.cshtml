@model BaiGiuaKy.Models.Order

<h2>Đơn hàng của bạn</h2>

<h2>Chi tiết đặt hàng - @Model.Id</h2>

<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            <tr>
                <td>@detail.Product.Name</td>
                <td>@detail.Quantity</td>
                <td>@detail.Price VND</td>
                <td>@(detail.Price*detail.Quantity) VND</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <h3>Tổng cộng: @Model.TotalPrice VND</h3>
</div>
<div class="card-footer text-muted text-center">
    <a asp-action="OrderList" class="btn btn-outline-primary">Quay lại </a>
</div>
<div>
    <!-- Các tùy chọn khác như reorder, in đơn hàng, v.v... -->
</div>
