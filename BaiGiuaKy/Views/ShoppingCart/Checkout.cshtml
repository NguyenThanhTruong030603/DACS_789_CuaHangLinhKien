@model Order

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label asp-for="ShippingAddress">Shipping Address</label>
        <input asp-for="ShippingAddress" class="form-control" />
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaymentMethod">Phương thức thanh toán</label><br />
        <div class="form-check">
            <input asp-for="PaymentMethod" class="form-check-input" type="radio" value="CashOnDelivery" id="CashOnDelivery">
            <label class="form-check-label" for="CashOnDelivery">Thanh toán tận nơi</label>
        </div>
        <div class="form-check">
            <input asp-for="PaymentMethod" class="form-check-input" type="radio" value="MoMo" id="MoMo">
            <label class="form-check-label" for="MoMo">Thanh toán qua MoMo</label>
        </div>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="TotalPrice">Tổng tiền</label>
        <input type="text" class="form-control" id="TotalPrice" name="TotalPrice" value="@Model.TotalPrice" readonly>
    </div>

    <button type="submit" class="btn btn-primary">Đặt Hàng</button>
    <div class="card-footer text-muted text-center">
        <a asp-action="Index" class="btn btn-outline-primary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
